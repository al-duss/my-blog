<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <article>
    <h2><%= post.title %></h2>
    <div class='post-meta'>
      By: <%= post.author.name  %><br/>
      Last updated: <%= post.created_at.to_s(:long) %>
    </div>

    <div class='post-content'>
      <%= simple_format post.content  %>
    </div>
  </article>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>